{
  "extends": "./tools/typescript/tsconfig.checks.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016"
    ],
    "types": [
      "chalk",
      "jest"
    ],
    "paths": {
      "rtext": [
        "packages/rtext/src"
      ],
      "rtext-render": [
        "packages/rtext-render/src"
      ],
      "rtext-writer": [
        "packages/rtext-writer/src"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "examples/*/src/**/*.ts"
  ]
}